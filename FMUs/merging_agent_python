import matplotlib.pyplot as plt
import os
file_paths = ['PVresults.csv', 'Thermalresults.csv', 'WTresults.csv']
for file_path in file_paths:
  data = pd.read_csv(file_path, parse_dates=[0])
  if 'Unnamed: 0' in data.columns:
    data = data.drop('Unnamed: 0', axis=1)
  data.set_index(data.columns[0], inplace=True)
  print(f"\nData preview from {file_path}:")
  print(data.head())
  plt.figure(figsize=(12, 6))
  for column in data.columns:
    plt.plot(data.index, data[column], label=column)
  plt.title(f'Time Series Plot - {os.path.basename(file_path)}')
  plt.xlabel('Time')
  plt.ylabel('Value')
  plt.legend()
  plt.grid(True)
  plt.tight_layout()
  output_name = os.path.splitext(os.path.basename(file_path))[0] + '_plot.png'
  plt.savefig(output_name)
  plt.show()
